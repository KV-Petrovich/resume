<div class="p-3">
    {{#each itemList}}
    <div>
        <ul class="list-group">
            <li class="list-group-item">
                <div class="row">
                    <div class="col-4">
                        <p>{{number}}</p>
                        <b>{{status}}</b>
                    </div>
                    <div class="col-2">
                        {{#with amount}}
                        <p>{{title}}:</p>
                        <p><b>{{value}}</b></p>
                        {{/with}}
                    </div>
                    <div class="col-4">
                        <div class="row">
                            {{#each images}}
                            <img src="{{this}}" alt="foto" class="col-4">
                            {{/each}}
                        </div>
                    </div>
                    <div class="col-2 pt-3">
                        {{#with button}}
                        <button type="button" href="{{link}}" target="_blank"
                            class="btn {{#if isPrimary}}btn-primary{{/if}}">{{text}}</button>
                        {{/with}}
                    </div>
                </div>
            </li>
        </ul>
    </div>
    {{/each}}
</div>