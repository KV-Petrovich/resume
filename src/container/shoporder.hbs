{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="p-4">
    <div class="row col-12">

        <div>
            {{#with navigation}}
            <div class="card">
                <div class="card-body">
                    <div class="nav">
                        {{#each links}}
                        <div class="nav-item">
                            <a href="href" class="nav-link">
                                {{#if href}}{{text}}
                                {{else}}
                                <div>
                                    <span class="nav-link disabled">Disabled</span>
                                </div>

                                {{/if}}
                            </a>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            {{/with}}
        </div>


        <section class="m-3">
            <div class="row col-12">
                <div>
                    <h3>{{header}}</h3>
                </div>
                <div class="col-8">
                    <div class="mt-4">
                        {{#with contacts_data}}
                        <h4>{{title}}</h4>

                        <div class="pt-4">

                            <div class="row">
                                {{#each buttons}}
                                <div class="col-3">
                                    <button
                                        class="btn {{#if isPrimary}}btn-warning{{/if}} {{#if isOutline}}btn-outline-warning{{/if}}">{{text}}</button>
                                </div>
                                {{/each}}
                            </div>
                        </div>


                        <div>
                            {{#with form}}
                            {{#with input}}

                            <div class="row mt-4">
                                <div class="col-4">
                                    {{#with surname}}
                                    <label class="form-label">{{label}}</label>
                                    <input type="text" class="form-control" placeholder="{{placeholder}}">
                                    <div class="form-text text-dark">{{caption}}</div>
                                    {{/with}}
                                </div>
                                <div class="col-4">
                                    {{#with name}}
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control" placeholder="{{placeholder}}">
                                    <div class="form-text text-dark">{{caption}}</div>
                                    {{/with}}
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="col-4">
                                    {{#with phone}}
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control" placeholder="{{placeholder}}">
                                    <div class="form-text text-dark">{{caption}}</div>
                                    {{/with}}
                                </div>
                                <div class="col-4">
                                    {{#with email}}
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control" placeholder="{{placeholder}}">
                                    <div class="form-text text-dark">{{caption}}</div>
                                    {{/with}}
                                </div>
                            </div>
                            {{/with}}


                            <hr class="m-4 col-8">

                            <div>
                                {{#each switch}}
                                <div class="form-check form-switch m-3">
                                    <label class="{{#if isActive}}form-check-label{{/if}}">{{text}}</label>
                                    <input name="food" type="checkbox" class="form-check-input">
                                </div>
                                {{/each}}
                            </div>
                            {{/with}}
                        </div>
                        {{/with}}
                    </div>
                    <hr class="m-4 col-8">
                </div>

                <div class="col-4">
                    <div class="card">
                        {{#each action_block}}
                        <div class="card-body">
                            <button class="btn 
                                {{#if isSuccess}}btn-success{{/if}} 
                                {{#if isDanger}}btn-danger{{/if}} 
                                {{#if isInfo}}btn-info{{/if}}">
                                {{text}}
                            </button>
                        </div>
                        {{/each}}
                    </div>
                    <div class="pt-3">
                        <div class="card">
                            {{#with total}}
                            <div class="card-body">
                                <div class="card-title">
                                    <h4>{{title}}</h4>
                                </div>
                                <div>
                                    {{#each item_list}}
                                    <div class="flex-column">{{name}}: {{price}}</div>
                                    {{/each}}
                                </div>
                                <hr>
                                <div>
                                    {{#each additional_info}}
                                    <div class="flex-column">{{text}}: {{value}}</div>
                                    {{/each}}
                                </div>
                                <hr>
                                <div>
                                    {{#with total_price}}
                                    <p>{{text}}: {{value}}</p>
                                    {{/with}}
                                </div>
                                <hr>
                                <div>
                                    {{#each button}}
                                    <p>
                                        <button class="btn
                                {{#if isPrimary}}btn-primary{{/if}} 
                                {{#if isOutline}}btn-outline-primary{{/if}}">
                                            {{text}}
                                        </button>
                                    </p>
                                    {{/each}}
                                </div>
                            </div>
                            {{/with}}
                        </div>
                    </div>

                </div>
            </div>

            <div>
                <div>
                    {{#with delivery}}
                    <h3>{{title}}</h3>
                    <div class="card col-8 mt-4">
                        <div class="row">
                            {{#each select}}
                            <div class="card-body col-4">
                                <label class="form-label ps-3">{{label}}</label>
                                <select class="form-select">
                                    <option selected>{{placeholder}}</option>
                                    {{#each options}}
                                    <option value="{{value}}">{{text}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    <div class="mt-3">
                        {{#each delivery_type}}
                        <div class="form-check">
                            <label class="form-check-label">{{type}}</label>
                            <input name="food" type="radio" class="form-check-input">
                        </div>
                        {{/each}}
                    </div>
                    <div class="p-3 col-8">
                        <hr>
                    </div>
                    <div>
                        {{#with payment}}
                        <h3>{{title}}</h3>
                        <div>
                            {{#each list}}
                            <div class="form-check">
                                <label class="form-check-label">{{type}}</label>
                                <input name="food" type="radio" class="form-check-input">
                                <div class="form-text text-dark">{{description}}</div>
                            </div>
                            {{/each}}
                        </div>
                        {{/with}}
                    </div>

                    <div class="p-3 col-8">
                        <hr>
                    </div>

                    <div>
                        <div>
                            {{#with contact}}
                            <h2>{{title}}</h2>
                            <div class="row mt-4">
                                <div class="col-4">
                                    {{#with surname}}
                                    <label class="form-label">{{label}}</label>
                                    <input type="text" class="form-control" placeholder="{{placeholder}}">
                                    <div class="form-text text-dark">{{caption}}</div>
                                    {{/with}}
                                </div>
                                <div class="col-4">
                                    {{#with name}}
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control" placeholder="{{placeholder}}">
                                    <div class="form-text text-dark">{{caption}}</div>
                                    {{/with}}
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="col-4">
                                    {{#with phone}}
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control" placeholder="{{placeholder}}">
                                    <div class="form-text text-dark">{{caption}}</div>
                                    {{/with}}
                                </div>
                                <div class="col-4">
                                    {{#with email}}
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control" placeholder="{{placeholder}}">
                                    <div class="form-text text-dark">{{caption}}</div>
                                    {{/with}}
                                </div>
                            </div>
                            {{/with}}
                        </div>
                    </div>
                    <div class="p-3 col-8">
                        <hr>
                    </div>
                    <div class="col-8">
                        <div>
                            {{#with coment}}
                            <label class="form-label">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            {{/with}}
                        </div>
                    </div>
                    {{/with}}
                </div>
            </div>
            <div class="p-3 col-8">
                <hr>
            </div>
            <div>
                <div>
                    {{#with coupon}}
                    <h3>{{title}}</h3>
                    <div>
                        {{#with select}}
                        <div class="col-8 p-2">
                            {{#with availabel_coupon}}
                            <label class="form-label ps-3">{{label}}</label>
                            <select class="form-select form-select-lg">
                                <option selected>{{placeholder}}</option>
                                {{#each options}}
                                <option value="{{value}}">{{text}}</option>
                                {{/each}}
                            </select>
                            {{/with}}
                        </div>
                        <div class="col-8 p-2">
                            {{#with friend_coupon}}
                            <label class="form-label ps-3">{{label}}</label>
                            <select class="form-select form-select-sm">
                                <option selected>{{placeholder}}</option>
                                {{#each options}}
                                <option value="{{value}}">{{text}}</option>
                                {{/each}}
                            </select>
                            {{/with}}
                        </div>
                        {{/with}}
                    </div>

                    <div>
                        {{#with add}}
                        <div>
                            {{#with friend}}
                            <div class="col-8 p-2">
                                <label class="form-label">{{label}}</label>
                                <input class="form-control form-control-lg" placeholder="{{placeholder}}">
                                <div class="form-text text-danker">{{caption}}</div>
                            </div>
                            {{/with}}
                        </div>
                        <div>
                            {{#with colleague}}
                            <div class="col-8 p-2">
                                <label class="form-label">{{label}}</label>
                                <input class="form-control form-control-sm" placeholder="{{placeholder}}">
                                <div class="form-text text-danker">{{caption}}</div>
                            </div>
                            {{/with}}
                        </div>
                        {{/with}}
                    </div>
                    {{/with}}
                </div>
            </div>

            <div class="p-2 col-8">
                <hr>
            </div>

            <div>
                {{#with quiz}}
                <h2>{{title}}</h2>
                <div>
                    {{#with preference}}
                    <p>{{title}}</p>
                    <div>
                        {{#each options}}
                        <div class="form-check">
                            <label class="form-check-label">{{this}}</label>
                            <input name="food" type="radio" class="form-check-input">
                        </div>
                        {{/each}}
                    </div>
                    {{/with}}
                </div>

                <div class="p-3">
                    {{#with your_expirience}}
                    <div class="col-8">
                        <label class="form-label">{{label}}</label>
                        <input class="form-control">
                    </div>
                    {{/with}}
                </div>

                <div class="col-8">
                    {{#with purchase_frequency}}
                    <div>
                        <label class="form-label ps-3">{{label}}</label>
                        <select class="form-select form-select">
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                            <option value="{{value}}">{{text}}</option>
                            {{/each}}
                        </select>
                    </div>
                    {{/with}}
                </div>

                <div class="mt-4">
                    {{#with factors}}
                    <p>{{title}}</p>
                    <div>
                        {{#each options}}
                        <div class="form-check">
                            <label class="form-check-label">{{this}}</label>
                            <input name="food" type="checkbox" class="form-check-input">
                        </div>
                        {{/each}}
                    </div>
                    {{/with}}
                </div>

                {{/with}}
            </div>

            <div class="pt-5">
                <hr>
            </div>

            <div class="nav">
                {{#each footer}}
                <div class="nav-item col-2">
                    {{#each this}}
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                    {{/each}}
                </div>
                {{/each}}
            </div>

        </section>




    </div>
</div>

