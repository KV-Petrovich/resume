{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="ps-4 row">
    <div class="mt-3">
        {{#with navigation}}
        <div class="nav">
            {{#each links}}
            <div class="nav-item">
                <a href="{{href}}" target="_blank" class="nav-link">{{text}}</a>
            </div>
            {{/each}}
            <div class="nav-item mt-2 ms-2">
                <a>Disabled</a>
            </div>
        </div>
        {{/with}}
    </div>

    <div>
        <div class="nav pt-5">
            <ol class="breadcrumb">
                {{#each breadcrumb}}
                <li class="breadcrumb-item">
                    <a class="nav-link {{#unless url}}disabled{{/unless}}" target="_blank" href="{{url}}">{{name}}</a>
                </li>
                {{/each}}
            </ol>

        </div>
    </div>

    <div>
        <h2>{{header}}</h2>
    </div>

    <div class="row mt-3">
        {{#each sortBlock}}
        <div class="col-3">
            <select class="form-select">
                <option selected>{{placeholder}}</option>
                <div>
                    {{#each options}}
                    <option>{{value}}. {{text}}</option>
                    {{/each}}
                </div>
            </select>
        </div>
        {{/each}}
    </div>

    <div class="row col-12 mt-4">
        <div class="col-4">
            <div class="card">
                {{#with filterBlock}}
                <div class="card-body">
                    <div>{{#with sellers}}
                        <p>{{title}}</p>
                        <div>
                            {{#each list}}
                            <div class="form-check">
                                <label class="form-check-label">{{value}}</label>
                                <input name="food" type="checkbox" class="form-check-input">
                            </div>
                            {{/each}}
                        </div>
                        {{/with}}
                    </div>

                    <hr>

                    <div>
                        {{#with brands}}
                        <p>{{title}}</p>
                        <div>
                            {{#with input}}
                            <input class="form-control" placeholder="{{placeholder}}">
                            {{/with}}
                        </div>
                        <div class="pt-3">
                            {{#each options}}
                            <div class="form-check">
                                <label class="form-check-label">{{value}}</label>
                                <input name="food" type="checkbox" class="form-check-input">
                            </div>
                            {{/each}}
                        </div>
                        {{/with}}
                    </div>

                    <hr>

                    <div>
                        {{#with price}}
                        <p>{{title}}</p>
                        <div>
                            {{#with range}}
                            <div class="mt-3">
                                <input class="form-control" placeholder="{{from}}">
                            </div>
                            <div class="mt-3">
                                <input class="form-control" placeholder="{{to}}">
                            </div>
                            {{/with}}
                        </div>
                        <div class="mt-3">
                            {{#with button}}
                            <button href="{{link}}" target="_blank" class="btn btn-outline-secondary">{{text}}</button>
                            {{/with}}
                        </div>
                        {{/with}}
                    </div>

                    <div>
                        {{#each filterList}}
                        <div class="pt-3">
                            <hr>
                            <p>{{title}}</p>
                        </div>

                        <div>
                            {{#each options}}
                            <div class="form-check">
                                <label class="form-check-label">{{value}}</label>
                                <input name="food" type="checkbox" class="form-check-input">
                            </div>
                            {{/each}}
                        </div>

                        {{/each}}
                    </div>
                </div>
                {{/with}}
            </div>
        </div>

        <div class="col-8">
            <div class="row">
                {{#each goodsList}}
                <div class="card col-6 g-2">
                    <img class="card-img-top" src="{{img}}" alt="foto">
                    <div class="card-body">
                        <div class="card-title">

                            {{#if isHot}}
                            <span class="badge text-bg-warning rounded-pill text-uppercase">HOT!</span>
                            {{/if}}
                            {{#if isNew}}
                            <span class="badge text-bg-primary rounded-pill text-uppercase">Нове</span>
                            {{/if}}
                            <div class="mt-3">
                                {{#if isFast}}
                                <p>
                                    <button type="button" class="btn btn-success btn-sm">Швидка доставка</button>
                                    {{/if}}
                                </p>
                            </div>
                            <div>
                                {{#if isFree}}
                                <p>
                                    <button type="button" class="btn btn-secondary btn-sm">Купити в кредит</button>
                                </p>
                                {{/if}}
                            </div>
                            <div>
                                <h5>{{name}}</h5>
                            </div>
                            <div>
                                {{#with review}}
                                <p>{{amount}} {{text}}</p>
                                {{/with}}
                            </div>
                            <div>
                                <h3>{{price}}</h3>
                            </div>
                            <div>
                                <p>{{delivery}}</p>
                            </div>
                            <div>
                                {{#each buttons}}
                                <div class="mt-2"><a type="button" href="{{link}}" class="btn {{#if isPrimary}}btn-primary{{/if}}
                                    {{#if isSecondary}}btn-secondary{{/if}}">{{text}}</a></div>
                                {{/each}}
                            </div>
                            <div class="mt-2">
                                <ul>
                                    {{#each characteristics}}
                                    <li>{{title}}: {{value}}</li>
                                    {{/each}}
                                </ul>

                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

    </div>

    <div class="mt-5">
        <div class="card text-bg-success">
            <div class="card-body text-center">
                {{#with service}}
                <h2>{{title}}</h2>
                <p>{{description}}</p>
                <div>
                    {{#each buttons}}
                    <a type="button" class="btn btn-primary btn-lg" href="{{link}} ">{{text}}</a>
                    {{/each}}
                </div>
                {{/with}}
            </div>
        </div>
    </div>

    <div class="pt-4">
        <hr>
    </div>

    <div class="nav">
        {{#each footer}}
        <div class="col-2">
            <div class="nav-item">
                {{#each this}}
                <a href="{{link}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                {{/each}}
            </div>
        </div>
        {{/each}}
    </div>
</div>









