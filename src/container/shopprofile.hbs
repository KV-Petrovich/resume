{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <div class="row m-3">
        {{#with navigation}}
        <div class="card">
            <div class="card-body">
                <div class="nav">
                    {{#each links}}
                    <div class="nav-item">
                        <a href="{{href}}" target="_blank" class="nav-link">{{text}}</a>
                    </div>
                    {{/each}}
                    <div class="nav-item mt-2 ms-2">
                        <a>Disabled</a>
                    </div>
                </div>
            </div>
        </div>
        {{/with}}
    </div>

    <div>
        <div class="p-3">
            <h2>{{header}}</h2>
        </div>
        <div>
            {{#with purchase}}
            <div class="m-2">
                <div class="nav nav-tabs">
                    {{#each tabs}}
                    <div class="nav-item">
                        <a class="nav-link {{#if @first}}active{{/if}}">{{this}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="row p-3">
                {{#with actionBlock}}
                <div class="col-4">
                    {{#with input}}
                    <input class="form-control" placeholder="{{placeholder}}">
                    {{/with}}
                </div>
                <div class="col-8">
                    {{#each buttons}}
                    <a type="button" href="{{link}}" target="_blank" class="mx-1 btn 
                        {{#if isSuccess}}btn-success{{/if}}
                        {{#if isOutline}}btn-outline-success{{/if}}
                        {{#if isDanger}}btn-outline-danger{{/if}}">{{text}}</a>
                    {{/each}}
                </div>
                {{/with}}
            </div>

            <div class="p-3">
                <hr>
            </div>

            <div class="p-3">
                {{#each itemList}}
                <div>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <div class="row col-12">
                                <div class="col-4">
                                    <p>{{number}}</p>
                                    <b>{{status}}</b>
                                </div>
                                <div class="col-2">
                                    {{#with amount}}
                                    <p>{{title}}:</p>
                                    <p><b>{{value}}</b></p>
                                    {{/with}}
                                </div>
                                <div class="col-3 d-flex">
                                    {{#each images}}

                                    <img src="{{this}}" alt="foto">

                                    {{/each}}
                                </div>
                                <div class="col-3">
                                    {{#with button}}
                                    <button type="button" href="{{link}}" target="_blank"
                                        class="btn {{#if isPrimary}}btn-primary{{/if}}">{{text}}</button>
                                    {{/with}}
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
    </div>




    <div>
        {{#each goodsBlock}}
        <div class="card m-3">
            <div class="card-body d-flex">
                <img src="{{image}}" alt="foto">
                <div class="ms-4 col-4">
                    <h4>{{name}}</h4>
                    <p>{{description}}</p>
                </div>
                <div class="ms-5">
                    {{#with price}}
                    <p>{{title}}:</p>
                    <p><b>{{value}}</b></p>
                    {{/with}}
                </div>
                <div class="ms-4">
                    <p>{{amount}}</p>
                </div>
                <div class="ms-5">
                    {{#each buttons}}
                    <div class="mt-3">
                        <button class="btn 
                    {{#if isPrimary}} btn-primary {{/if}}
                    {{#if isDanger}} btn-outline-danger {{/if}}">
                            {{text}}</button>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    {{!--
    Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
    Адже наш layout/default.hbs має вже структуру HTML
    --}}