{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <div class="row m-3">
        {{#with navigation}}
        <div class="card">
            <div class="card-body">
                <div class="nav">
                    {{#each links}}
                    <div class="nav-item">
                        <a href="{{href}}" target="_blank" class="nav-link">{{text}}</a>
                    </div>
                    {{/each}}
                    <div class="nav-item mt-2 ms-2">
                        <a>Disabled</a>
                    </div>
                </div>
            </div>
        </div>
        {{/with}}
    </div>

    <div>
        <div class="p-3">
            <h2>{{header}}</h2>
        </div>
        <div>
            {{#with purchase}}
            <div class="m-2">
                <div class="nav nav-tabs">
                    {{#each tabs}}
                    <div class="nav-item">
                        <a class="nav-link {{#if @first}}active{{/if}}">{{this}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="row p-3">
                {{#with actionBlock}}
                <div class="col-4">
                    {{#with input}}
                    <input class="form-control" placeholder="{{placeholder}}">
                    {{/with}}
                </div>
                <div class="col-8">
                    {{#each buttons}}
                    <a type="button" href="{{link}}" target="_blank" class="mx-1 btn 
                        {{#if isSuccess}}btn-success{{/if}}
                        {{#if isOutline}}btn-outline-success{{/if}}
                        {{#if isDanger}}btn-outline-danger{{/if}}">{{text}}</a>
                    {{/each}}
                </div>
                {{/with}}
            </div>

            <div class="p-3">
                <hr>
            </div>

            <div class="p-3">
                {{#each itemList}}
                <div>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-4">
                                    <p>{{number}}</p>
                                    <b>{{status}}</b>
                                </div>
                                <div class="col-2">
                                    {{#with amount}}
                                    <p>{{title}}:</p>
                                    <p><b>{{value}}</b></p>
                                    {{/with}}
                                </div>
                                <div class="col-4">
                                    <div class="row">
                                        {{#each images}}
                                        <img src="{{this}}" alt="foto" class="col-4">
                                        {{/each}}
                                    </div>
                                </div>
                                <div class="col-2 pt-3">
                                    {{#with button}}
                                    <button type="button" href="{{link}}" target="_blank"
                                        class="btn {{#if isPrimary}}btn-primary{{/if}}">{{text}}</button>
                                    {{/with}}
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
    </div>

    <div class="p-3">
        <hr>
    </div>

    <div class="m-3">
        {{#with userInfo}}
        <div>
            <h3>{{title}}</h3>
        </div>

        <div class="card">
            <div class="card-body">
                {{#with profileData}}
                <h4 class="card-title">{{title}}</h4>
                {{#with fullName}}
                <ul class="list-group">
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-4">
                                {{#with surname}}
                                <p>{{title}}</p>
                                <b>{{value}}</b>
                                {{/with}}
                            </div>
                            <div class="col-4">
                                {{#with name}}
                                <p>{{title}}</p>
                                <b>{{value}}</b>
                                {{/with}}
                            </div>
                            <div class="col-4">
                                {{#with middleName}}
                                <p>{{title}}</p>
                                <b>{{value}}</b>
                                {{/with}}
                            </div>
                        </div>
                    </li>
                </ul>
                {{/with}}
                <div class="mt-3">
                    {{#with otherInfo}}
                    <ul class="list-group">
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-4">
                                    {{#with birthday}}
                                    <p>{{title}}</p>
                                    <b>{{value}}</b>
                                    {{/with}}
                                </div>
                                <div class="col-4">
                                    {{#with sex}}
                                    <p>{{title}}</p>
                                    <b>{{value}}</b>
                                    {{/with}}
                                </div>
                                <div class="col-4">
                                    {{#with language}}
                                    <p>{{title}}</p>
                                    <b>{{value}}</b>
                                    {{/with}}
                                </div>
                            </div>
                        </li>
                    </ul>
                    {{/with}}
                </div>
                {{/with}}

                <div class="mt-3">

                    <ul class="list-group">
                        <li class="list-group-item">
                            <div class="row">
                                {{#each buttons}}
                                <div class="col-4">
                                    <a type="button" href="{{link}}" target="_blank" class="btn {{#if isPrimary}}btn-primary{{/if}}
                                        {{#if isSecondary}}btn-outline-secondary{{/if}}
                                        {{#if isDanger}}btn-outline-danger{{/if}}" class="col-4">{{text}}</a>
                                </div>
                                {{/each}}
                            </div>
                        </li>
                    </ul>

                </div>
            </div>
        </div>

        <div class="mt-3">
            <div class="card">
                <div class="card-body">
                    {{#with recipients}}
                    <div>
                        <h3>{{title}}</h3>
                    </div>
                    <div class="row">
                        {{#each users}}
                        <div class="col-4">
                            <div class="list-group">
                                <div class="list-group-item">
                                    <div>
                                        <b>{{name}}</b>
                                        <p>{{phone}}</p>
                                    </div>
                                    <div>
                                        {{#with button}}
                                        <a type="buttton" href="{{link}}" target="_blank"
                                            class="btn btn-primary">{{text}}</a>
                                        {{/with}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    {{/with}}
                </div>
            </div>
        </div>

        <div class="mt-3">
            <div class="card">
                <div class="card-body">
                    {{#with contacts}}
                    <div>
                        <h3>{{title}}</h3>
                    </div>
                    <div class="row">
                        {{#each contactData}}
                        <div class="col-4">
                            <div class="list-group">
                                <div class="list-group-item">
                                    <div>
                                        <p>{{title}}</p>
                                        <b>{{value}}</b>
                                    </div>
                                    <div class="mt-2">
                                        {{#with button}}
                                        <a type="button" href="{{link}}" target="_blank" class="btn {{#if isPrimary}}btn-primary{{/if}}
                                        {{#if isSecondary}}btn-outline-secondary{{/if}}
                                        {{#if isDanger}}btn-outline-danger{{/if}}">{{text}}</a>
                                        {{/with}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    {{/with}}
                </div>
            </div>
        </div>
        {{/with}}
    </div>

    <div class="p-3">
        <hr>
    </div>

    <div class="nav">
        {{#each footer}}
        <div class="col-2">
            <div class="nav-item">
                {{#each this}}
                <a href="{{link}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                {{/each}}
            </div>
        </div>
        {{/each}}
    </div>








