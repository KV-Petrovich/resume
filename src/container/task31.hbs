{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main>
    <div class="row">
        {{#with navigation}}
        {{#each links}}
        <div class="col-2">
            <a href="{{href}}">{{text}}</a>
        </div>
        {{/each}}
        {{#with button}}
        <div class="col-2">
            <a href="href" class="btn btn-primary">{{text}}</a>
        </div>
        {{/with}}
        {{/with}}
    </div>

    <hr>

    {{#with header}}
    <h1>{{title}}</h1>
    <p>{{description}}</p>
    {{#with button}}
    <a href="link" class="btn btn-primary">{{text}}</a>
    {{/with}}
    {{/with}}

    <hr>

    {{#with city}}

    <h2>{{title}}</h2>
    <br>
    <div class="row g-3">
        {{#each cards}}
        <div class="col-5">
            <div class="card">
                {{#with picture}}
                <img class="card-img-top" src="{{src}}" alt="{{alt}}">
                {{/with}}
                <div class="card-body">
                    <div class="card-title">
                        {{title}}
                    </div>
                    <p>{{description}}</p>
                    <div>
                        {{#with button}}
                        <a href="href" class="btn btn-primary btn-lg">{{text}}</a>
                        {{/with}}
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/with}}

    <hr>

    {{#with winner}}
    <h2>{{title}}</h2>
    <section>
        {{#with table}}
        <table class="table">
            <thead>
                <tr>
                    {{#each head}}
                    <th>
                        {{this}}
                    </th>
                    {{/each}}
                </tr>
            </thead>
            {{#each user}}
            <tbody>
                <tr>
                    <th>
                        {{place}}
                    </th>
                    <td>
                        {{name}}
                    </td>
                    <td>
                        {{surname}}
                    </td>
                    <td>
                        {{nickname}}
                    </td>
                </tr>
            </tbody>
            {{/each}}
        </table>
        {{/with}}
    </section>
    {{/with}}

    <hr>



    <section>
        {{#with gallery}}
        <h2>{{title}}</h2>
        <div class="row">
            {{#each cards}}
            <div class="col-4">
                <div class="card">
                    <div class="card-header">
                        {{name}}
                    </div>
                    <ul class="list-group list-group-flush">
                        {{#each items}}
                        <li class="list-group-item">
                            {{this}}
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>

    <hr>
    <section>

        {{#with relaxion}}
        <p class="display-3">{{title}}</p>
        <div class="row gx-2 gy-4">
            {{#each cards}}
            <div class="col-5">
                <div class="card text-bg-secondary">
                    <div class="card-header">
                        {{header}}
                    </div>
                    <div class="card-body">
                        <b class="card-title">
                            <p>{{title}}</p>
                        </b>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>

    <hr>

    <section>
        {{#with rest}}
        <div class="row">
            {{#each cards}}
            <div class="col-6">
                <div class="card text-center">
                    <div class="card-header">
                        {{header}}
                    </div>
                    <div class="card-body">
                        <div class="card-title">
                            <b>{{title}}</b>
                        </div>
                        <p>{{description}}</p>
                        <button class="btn btn-primary btn-lg">{{button}}</button>
                    </div>
                    <div class="card-footer ">{{footer}}</div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>

    <hr>

    <section>

        {{#with proposition}}
        <p class="display-2">{{title}}</p>
        <div class="row">
            {{#each card}}
            <div class="col-5">
                <div class="card text-bg-warning">
                    <div class="card-header">
                        {{header}}
                    </div>
                    <div class="card-body">
                        <div class="card-title">
                            <p><b>{{title}}</b></p>
                            <p>{{description}}</p>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>

    <hr>

    <section>
        {{#with footer}}
        <h5>{{title}}</h5>

        <div class="row">
            <div class="col-3">
                {{#each navigation}}
                <div> <a href="{{href}}" class="btn btn-link">{{text}}</a></div>
                {{/each}}
            </div>
            <div class="col-3">
                {{#each socialMedia}}
                <div>
                    <a href="{{link}}" class="btn btn-outline-dark">{{name}}</a>
                </div>
                {{/each}}
            </div>
            <div class="col-3">
                {{#each partners}}
                <div>
                    <a href="{{link}}" class="btn btn-outline-info">{{name}}</a>
                </div>
                {{/each}}
            </div>
        </div>
        {{/with}}
    </section>


</main>

