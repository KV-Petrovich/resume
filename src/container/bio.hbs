{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>
        <h2><ins>{{name}}</ins></h2>

        <div><b>Birthdate</b> - {{birthdate}}. {{birthplace}}</div>
        <div><b>Deathdate</b> - {{deathdate}}. {{deathplace}}</div>
        <div><b>Nationality</b>: {{nationality}}</div>
    </main>
    <hr>

    <body>
        <div><b>Occupation</b> -
            {{occupation}}
            <ul>
                {{#each known_for}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>
        <div>
            {{#each education}}
            <b>Education</b> - {{degree}}, {{field}}, {{institution}} {{year}}
            {{/each}}
        </div>
        <div>
            <h4> Notable publications</h4>
            <ol>
                {{#each notable_publications}}
                <li>{{title}}, {{year}}. {{publisher}}</li>
                {{/each}}
            </ol>
        </div>
        <div>
            <h4>Partners</h4>
            <ul>
                {{#each partners}}
                <li>{{name}}, {{relationship}}, {{years}}</li>
                {{/each}}
            </ul>
        </div>
        <div>
            <h4>Awards</h4>
            {{#each awards}}
            <b><ins>{{title}}, {{year}}</ins> - </b>
            <em>{{description}}</em>
            {{/each}}
        </div>
        <div>
            <h4>Influences</h4>
            <ol>
                {{#each influences}}
                <li>{{this}}</li>
                {{/each}}
            </ol>
        </div>
        <div>
            <h4>Influenced</h4>
            <ol>
                {{#each influenced}}
                <li>{{this}}</li>
                {{/each}}
            </ol>
        </div>
        <div>
            <h4>Quotes</h4>
            <ul>
                {{#each quotes}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>
    </body>
    <hr>
    <footer>
        <div>
            <h3>Major_discoveries</h3>
            <ul>
                {{#each major_discoveries}}
                <li><b>{{title}} {{year}}</b> - <em>{{description}}</em></li>
                {{/each}}
            </ul>
        </div>
        <div>
            <h3>Contributions</h3>
            <ul>
                {{#with contributions}}
                <li><b>{{title}} - <em>{{description}}</em></li>
                <b>{{year}} - <em><ins>{{field}}</ins></em></b>
                {{/with}}
            </ul>
        </div>
    </footer>
</div>

