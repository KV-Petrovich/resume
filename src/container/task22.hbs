{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <div>
        {{#with page_header}}
        <div class="text-center">
            <h1>{{title}}</h1>
            <p>{{description}}</p>
        </div>
        {{/with}}
    </div>

    <section>
        <div class="card">
            <div class="card-body">
                {{#with section}}
                {{#with about_us}}
                {{#with title_list}}
                <div class="text-end">
                    <div class="display-6">{{main}}</div>
                    <h2>{{sub}}</h2>
                </div>
                {{/with}}
                <div>
                    <button class="btn btn-outline-info btn-sm">{{button.text}}</button>
                </div>
                {{/with}}
            </div>
        </div>

        <br>

        <section class="card">
            <div class="card-body">
                {{#with advantage}}
                <div class="display-5">{{title}}</div>
                <br>
                <div class="card">
                    <div class="card-body">
                        {{#with efficiency}}
                        <div class="display-4">{{title}}</div>
                        <p>
                        <h6>{{sub_title}}</h6>
                        </p>
                        <p>{{description}}</p>
                        <button class="btn btn-outline-warning">{{button}}</button>
                        {{/with}}
                    </div>
                </div>
                <br>
                <div class="card">
                    <div class="card-body">
                        {{#with innovation}}
                        <div class="text-center">
                            <div class="display-4">{{title}}</div>
                            <p>
                            <h6>{{sub_title}}</h6>
                            </p>
                            <p>{{description}}</p>
                        </div>
                        <button class="btn btn-outline-warning">{{button}}</button>
                        {{/with}}
                    </div>
                </div>
                <br>
                <div class="card">
                    <div class="card-body">
                        {{#with collaboration}}
                        <div class="text-end">
                            <div class="display-4">{{title}}</div>
                            <p>
                            <h6>{{sub_title}}</h6>
                            </p>
                            <p>{{description}}</p>
                        </div>
                        <button class="btn btn-outline-warning">{{button}}</button>
                        {{/with}}
                    </div>
                </div>
                {{/with}}
            </div>
        </section>
        <br>
        <div class="card">
            <div class="card-body">
                {{#with agreement}}
                <div class="display-5">
                    {{title}}
                </div>
                <div class="card">
                    <div class="card-body">
                        {{#with info}}
                        <h5>{{sub_title}}</h5>
                        <div class="card">
                            <div class="card-body">
                                {{#with detail}}
                                <p>{{text}}</p>
                                <button class="btn btn-success">{{button}}</button>
                                {{/with}}
                            </div>
                        </div>
                        {{/with}}
                    </div>
                </div>
                {{/with}}
            </div>
        </div>
        {{/with}}
    </section>
</div>

