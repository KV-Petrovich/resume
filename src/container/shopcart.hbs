{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="p-4">
    <div class="row col-12">
        {{#with navigation}}
        <div class="card">
            <div class="card-body">
                <div class="nav">
                    {{#each links}}
                    <div class="nav-item">
                        <a href="href" class="nav-link">{{text}}</a>
                    </div>
                    {{/each}}
                    <div class="nav-item mt-2 ms-2">
                        <a>Disabled</a>
                    </div>
                </div>
            </div>
        </div>
        {{/with}}
    </div>

    <div class="pt-4">
        {{#with header}}
        <h3>{{title}}</h3>
        <div class="pt-3">
            {{#with button}}
            <a href="{{link}}" target="_blank" class="btn btn-outline-dark">{{text}}</a>
            {{/with}}
        </div>
        {{/with}}
    </div>

    <div class="p-4">
        <hr>
    </div>


    <div>
        {{#each goodsBlock}}
        <div class="card m-3">
            <div class="card-body d-flex">
                <img src="{{image}}" alt="foto">
                <div class="ms-4 col-4">
                    <h4>{{name}}</h4>
                    <p>{{description}}</p>
                </div>
                <div class="ms-5">
                    {{#with price}}
                    <p>{{title}}:</p>
                    <p><b>{{value}}</b></p>
                    {{/with}}
                </div>
                <div class="ms-4">
                    <p>{{amount}}</p>
                </div>
                <div class="ms-5">
                    {{#each buttons}}
                    <div class="mt-3">
                        <button class="btn 
                    {{#if isPrimary}} btn-primary {{/if}}
                    {{#if isDanger}} btn-outline-danger {{/if}}">
                            {{text}}</button>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <div class="p-4">
        <hr>
    </div>

    <div>
        {{#with total}}
        <div>
            <h3>{{title}}</h3>
        </div>
        <div class="display-6">
            <b>{{amount}}</b>
        </div>
        <div>
            {{delivery}}
        </div>
        <div class="pt-3">
            {{#each buttons}}
            <p><a href="{{link}}" target="_blank" class="btn {{#if isSuccess}} btn-success {{/if}}
                    {{#if isOutline}} btn-outline-success {{/if}}">{{text}}</a></p>
            {{/each}}
        </div>
        {{/with}}
    </div>

    <div class="p-2">
        <hr>
    </div>

    <div>
        {{#with goodsOtherBlock}}
        <div class="text-center m-3">
            <h3>{{title}}</h3>
        </div>
        <div class="row col-12">
            {{#each cards}}
            <div class="col-4 g-2">
                <div class="card">
                    <img class="card-img-top" src="{{image}}" alt="foto">
                    <div class="card-body">
                        <div class="card-title">
                            <b>{{title}}</b>
                            {{#unless isHot}}
                            <span class="badge text-bg-warning rounded-pill text-uppercase">HOT!</span>
                            {{/unless}}
                            {{#unless idNew}}
                            <span class="badge text-bg-primary rounded-pill text-uppercase">New</span>
                            {{/unless}}
                        </div>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </div>

    <div class="p-2">
        <hr>
    </div>

    <div>
        {{#with subscribe}}
        <div class="alert text-bg-dark">
            <h2>{{header}}</h2>
            <p>{{description}}</p>

            {{#each buttons}}
            <div class="m-2">
                <a href="{{link}}" class="btn btn-primary">{{text}}</a>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </div>

    <div class="p-2">
        <hr>
    </div>

    <div>
        <div class="nav">
            {{#each footer}}
            <div class="nav-item col-2">
                {{#each this}}
                <a href="{{link}}" class="nav-link">{{text}}</a>
                {{/each}}
            </div>
            {{/each}}
        </div>
    </div>
</div>




