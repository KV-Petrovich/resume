{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="row col-12">
    <div class="text-center pt-3">
        <h1><ins>Languages programming</ins> </h1>
    </div>

    <main>
        <div class="pt-3">
            <ol>
                {{#with web}}
                {{#each languages}}
                <li><b><em>{{name}}</em></b> - {{version}}. {{description}}</li>
                <div>
                    {{#each elements}}
                    <p><b><ins>{{name}}</ins></b> - {{description}}</p>
                    <div>
                        <ul>
                            {{#each attributes}}

                            <li><b>{{name}}</b> - {{description}}</li>

                            {{/each}}
                        </ul>
                    </div>
                    {{/each}}
                </div>
                <br>
                <div>
                    {{#each properties}}
                    <p><b><ins>{{name}}</ins></b> - {{description}}</p>
                    <div>
                        <ul>
                            {{#each values}}
                            <li><b>{{value}}</b> - {{description}}</li>
                            {{/each}}
                        </ul>
                    </div>
                    {{/each}}
                </div>
                <br>
                <div>
                    {{#each functions}}
                    <p><b><ins>{{name}}</ins></b> - {{description}}</p>
                    <div>
                        <ul>
                            {{#each parameters}}
                            <li><b>{{name}}</b> - {{type}}. {{description}}</li>
                            {{/each}}
                        </ul>
                    </div>
                    {{/each}}
                </div>
                {{/each}}
                {{/with}}
            </ol>
        </div>

    </main>
</div>

